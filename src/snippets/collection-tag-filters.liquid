<ul class="dropdown-menu">
  <div class="filter-block">
    <form class="form-horizontal" action="">
      <div class="form-group tags categories">
        <ul class="subnav clearfix">
          <li{% unless current_tags %} class="active"{% endunless %}>
            {% if collection.handle %}
            <a href="/collections/{{ collection.handle }}{% if collection.sort_by %}?sort_by={{ collection.sort_by }}{% endif %}">Show All</a>
            {% elsif collection.current_type %}
            <a href="{{ collection.current_type | url_for_type | sort_by: collection.sort_by }}">Show All</a>
            {% elsif collection.current_vendor %}
            <a href="{{ collection.current_vendor | url_for_vendor | sort_by: collection.sort_by }}">Show All</a>
            {% endif %}
          </li>
          {% for tag in collection.all_tags %}
          {% if current_tags contains tag %}
          <li class="active">
            {{ tag | link_to_remove_tag: tag }}
          </li>
          {% else %}
          <li>
            {{ tag | link_to_tag: tag }}
          </li>
          {% endif %}
          {% endfor %}
        </ul>
        <style>
          .clearfix:before, .clearfix:after { content: ""; display: table; }
          .clearfix:after { clear: both; }
          .clearfix { zoom: 1; }
          /* Subnavigation styles */
          .subnav { clear: both; list-style-type: none; margin: 0 30px; padding: 0; }
          .subnav li { display: block; position: relative; }
          .subnav li a {
            padding: 5px 0px 0 35px;
            font-weight: bold;
            font-size: 16px;
            line-height: 21px;
            letter-spacing: 0.1px;
            color: #3E454C;
            display: block;
            margin: 0 0 25px;
            text-transform: capitalize;
             position: relative;
          }
          .subnav li a:before{
            content: ''; 
            position: absolute;
            top: 6px; 
            left: 0px;
            height: 20px;
            width: 20px;
            background-color: #fff;
    		border: 2px solid #DDDDDD;
    		border-radius: 2px;
            cursor: pointer;
          }
          .subnav li a:hover, .subnav li.active a {
            color: #3E454C;
            position: relative;
          }
          .subnav li.active a:after{
            content: '';
            position: absolute;
            left: 7.5px;
            top: 9px;
            -webkit-transform: rotate(45deg);
            -ms-transform: rotate(45deg);
            transform: rotate(45deg);
            height: 12px;
            width: 6px;
            border-bottom: 3px solid #07a5b5;
            border-right: 3px solid #07a5b5;
          }
        </style>
      </div>
    </form>
  </div>
</ul>