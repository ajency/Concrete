
<ul class="sub-megamenu">
  <div class="menu-links">
    <a class="link" title="Shop All" href="/collections/all">Shop All<span><i class="fa fa-chevron-right" aria-hidden="true"></i></span></a>
    <a class="close" title="close">{{ 'grey-close.svg' | asset_url | img_tag: 'close', 'close_ic' }}Close</a>
  </div>
  <p class="shop-for">Shop for</p>
  {% for link in linklists[section.settings.submenu].links %}
  {% if link.links != blank %}
  <li>
    <a href="{{ link.url }}" id="{{ link.title }}" title="{{ link.title }}">{{ link.title }}{% render 'icon-arrow-down' %}</a>
    <ul class="submenu">
      {% for childlink in link.links %}
      <li class="child-menu">
        <a href="{{ childlink.url }}" id="{{ childlink.title }}" title="{{ childlink.title }}">
          {{ childlink.title }}
        </a>

        <ul class="grandchild-submenu">
          {% for grandchildlink in childlink.links %}
          <li class="grandchild-menu">
            <a href="{{ grandchildlink.url }}" id="{{ grandchildlink.title }}" title="{{ grandchildlink.title }}"  rel="keep-params">
              {{ grandchildlink.title }}
            </a>
          </li>
          {% endfor %}
        </ul>
      </li>
      {% endfor %}
    </ul>
  </li>
  {% else %}
  <li>
    <a href="{{ link.url }}" title="{{ link.title }}">
      {{ link.title }}
    </a>
  </li>
  {% endif %}
  {% endfor %}
</ul>

