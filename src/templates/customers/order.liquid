  The data-label attributes on <td> elements are mobile-friendly
  helpers used for responsive-table labels
{% endcomment %}
<div id="rewards">
  <div class="container">
    <a href="/account" class="back-arrow deskMode">
      <i class="fa fa-arrow-left" aria-hidden="true"></i>
      <span class="back">Back</span>
    </a>
    <div class="row pl-2 pr-2 justify-content-between">
      <div class="col-md-5 col-sm-12">
        <div class="order-info d-flex align-items-start">
          <div class="product-info border-right-color">
            <span>Order Id</span>
            <p class="order-number">#{{ order.order_number }}</p>
          </div>
          <div class="product-info border-0">
            <span>Placed On</span>
            <p class="order-date">{{ order.created_at | date: format: 'month_day_year' }}</p>
          </div>
        </div>
        <div class="content-divider"></div>
<!--         <a class="link" href="#">Invoice</a>
        
        <div class="track-order">
          <div class="track-order-details">
            <span class="order order-placed mr-0">Placed</span>
            <span class="date mr-0">14 July 2020</span>
          </div>
          <hr class="seperator">
          <div class="track-order-details">
            <span class="order order-processing mr-0 text-right">Processing</span>
            <span class="date text-right mr-0">14 July 2020</span>
          </div>
        </div> -->
        <div class="block">
          <h4 class="block-header">Address</h4>
            <span> Billing Address</span>
          <p class="block-content">{{ order.billing_address | format_address }}</p>
           <div class="divider"></div>
            <span> Shipping Address</span>
          <p class="block-content">{{ order.shipping_address | format_address }}</p>
        </div>
        <div class="extraSpacing mobileMode"></div>
        <div class="content-divider mobileMode"></div>
      </div>
      <div class="col-md-1 col-sm-12"></div>
      <div class="col-md-5 col-sm-12">
        <div class="order-summary">
          <h4 class="block-header deskMode">Order Summary</h4>
          {% for line_item in order.line_items %}
            <div id="{{ line_item.key }}">
              <div class="product-name" data-label="{{ 'customer.order.product' | t }}">
                {{ line_item.title | link_to: line_item.product.url }}
              </div>
            </div>
          {% endfor %}
          <h4 class="block-header mobileMode">Payment Details</h4>
          <h5 class="title deskMode">Order Total</h5>
          <div class="order-details">
            {% for line_item in order.line_items %}
            <div class="summary-info">
              <p class="value">MRP</p>
              <p class="value">{{ line_item.price | money }}</p>
            </div>
            
<!--             <div class="summary-info">
              <p class="value">Offer Price</p>
              <p class="value">{{ line_item.compare_at_price | money }}</p>
            </div> -->
             {% endfor %}
            {% for discount in order.discounts %}
            <div class="summary-info">
              <p class="value">Discount</p>
              <p class="value">{{ discount.savings | money }}</p>
            </div>
            {% endfor %}
            {% for shipping_method in order.shipping_methods %}
            <div class="summary-info">
              <p class="value">Shipping</p>
              <p class="value">{{ shipping_method.price | money }}</p>
            </div>
            {% endfor %}
            <div class="divider"></div>
            <div class="summary-info">
              <p class="summary-text">Order Total</p>
              <p class="summary-amount">{{ order.total_price | money }}</p>
            </div>
<!--             <p class="summary-saving text-right">Total Saving: â‚¹200</p> -->
            <div class="divider"></div>
            <p class="summary-text">Payment Mode: COD</p>
          </div>
<!--           <div class="action-block"> 
            <button type="button" class="btn-text" data-toggle="modal" data-target="#repalce-return"> Return or replace items </button> 
          </div>  -->
        </div>
      </div>
    </div>
  </div>
</div>
