
<div class="customer-account container">
    {% form 'create_customer' %}
    <h4 class="form-title">{{ 'customer.register.title' | t }}</h4>
 
      <input type="text"
        name="customer[first_name]"
        id="FirstName"
        class="customer-input"
        placeholder="{{ 'customer.register.first_name' | t }}"
        autofocus
        {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>

      <input type="text"
        name="customer[last_name]"
        id="LastName"
        class="customer-input"
        placeholder="{{ 'customer.register.last_name' | t }}"
        {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>

      <input type="email"
        name="customer[email]"
        id="Email"
        class="customer-input {% if form.errors contains 'email' %}input-error{% endif %}"
        placeholder="{{ 'customer.register.email' | t }}"
        value="{% if form.email %}{{ form.email }}{% endif %}"
        spellcheck="false"
        autocomplete="off"
        autocapitalize="off">
       {% if form.errors contains 'email' %}<span class="errors">Email can't be blank</span>{% endif %}

      
      <input type="password"
        name="customer[password]"
        id="CreatePassword"
        class="customer-input {% if form.errors contains 'password' %}input-error{% endif %}"
        placeholder="{{ 'customer.register.password' | t }}">
        {% if form.errors contains 'password' %}<span class="errors">password {{ form.errors.messages['password'] }}</span>{% endif %}
        
        <input type="submit" value="{{ 'customer.register.submit' | t }}" class="button" title="{{ 'customer.register.submit' | t }}">
        <div class="link-block">
            <a class="action-link" href="{{ shop.url }}" title="{{ 'customer.register.cancel' | t }}">{{ 'customer.register.cancel' | t }}</a>
        </div>
    {% endform %}
</div>
