                        <button class="custom-promo-botton" type="submit">Apply</button>  
                      </div>
                    </div> -->
                    <span class="th-do-apply_offer-btn"></span>
                    <div class="size15 trans-0-4">
                      <!-- Button -->

<!--                       <button {% if order_limit_reached or min_order_limit_reached %}disabled{% endif %} onclick="document.getElementById('cart_form').submit(); return false;" class="flex-c-m sizefull cart-summary-orange-btn bo-rad-23 trans-0-4">
                        {{ 'cart.general.proceed_checkout' | t }}
