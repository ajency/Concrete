
<div class="cart" data-section-id="{{ section.id }}" data-section-type="cart-template" data-ajax-enabled="{{ section.settings.cart_ajax_enable }}">
	<div class="container">
    <div {% if cart.item_count == 0 %}class="hide" {% endif %}data-cart-wrapper>
      <form action="{{ routes.cart_url }}" method="post" novalidate class="cart">
        <div>
          
          <div data-cart-line-items>
            
              <div class="row" data-cart-item data-cart-item-key="{{ item.key }}" data-cart-item-url="{{ item.url }}" data-cart-item-title="{{ item.title }}" data-cart-item-index="{{ forloop.index }}" data-cart-item-quantity="{{ item.quantity }}">
                <div class="col-md-7 col-sm-12 small--text-left" data-cart-table-cell>
                  <div class="cart-header">
                        <h3 class="cart-header__title">{{ 'cart.general.title' | t }}</h3>
                    	<span class="cart-item-count">({{ cart.item_count }} {% if cart.item_count == 1 %}Item{% else%}Items{% endif %})</span>
                  </div>
                  <div class="divider"></div>
                  {%- for item in cart.items -%}
                  
                  <div class="cart__product-information">
                    <div class="cart__image-wrapper">
                      <img class="cart__image{% if item.image == null %} hide{% endif %}" src="{{ item | img_url: 'x190' }}" alt="{{ item.image.alt | escape }}" data-cart-item-image>
                    </div>
                    <div class="w-100" style="width: 100%">
                      <div class="list-view-item__title">
                        <a href="{{ item.url }}" class="cart__product-title" data-cart-item-title data-role="product-title">
                          {{ item.product.title }}
                        </a>
                      </div>
                      {% if item.product.metafields.product_meta.product_des != blank %}
                          <span class="short-des">{{item.product.metafields.product_meta.product_des}}</span>
                      {% endif %} 
<!--                       <div class="customize">Customise ></div> -->
                      <div class="item-price-margin flex-w ">
                        <div class="price-details">
                          <div class="item-price th_do_item_price"><span class='hulkapps-cart-item-price' data-key='{{item.key}}'>{{ item.price | money }}</span></div>
                          <del class="sale-price">{{ item.variant.compare_at_price | money }}</del>
                          	<span id="savePrice" class="m-text17a p-r-10">
                              {% assign savePrice = item.variant.compare_at_price | minus: item.price  %}
                              {% assign results = 0.000 | plus:savePrice | divided_by: item.variant.compare_at_price | times: 100 | round %}
                              ({{ results }}% Off)
                      		</span>
                        </div>
            			{%- assign inv_man = item.variant.inventory_management -%}{%- assign inv_qua = item.variant.inventory_quantity | plus: 0 -%}{%- unless inv_man -%}{%- assign inv_qua = 100000 -%}{%- endunless -%}{%- if item.variant.available and inv_qua <= 0 -%}{%- assign inv_qua = 100000 -%}{%- endif -%}

                        <div class="flex-w of-hidden w-size17 qty-wrapper">
                          <button {% if quantity == true %}disabled{% endif %}  class="btn-num-product-down color1 flex-c-m quantity-button eff2">
                            <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                          </button>
                          <input disabled type="text" name="updates[]" id="updates_{{ item.id }}" data-key="{{ item.id }}" value="{{ item.quantity }}" min="0" class="counter-value size8 m-text18 t-center num-product" data-line="{{ forloop.index }}">

                          <button  {% if item.quantity == inv_qua %} disabled {% endif %} class="btn-num-product-up color1 flex-c-m quantity-button eff2">
                            <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                          </button>
                      	</div>
                      </div>
                      <a class="remove" href="/cart/change?line={{ forloop.index }}&amp;quantity=0" class="cart__remove">
                        <small>{{ 'cart.general.remove' | t }}</small>
                      </a>
                      
                    </div>
                  </div>
                 {% endfor %}

                </div>
                 <div class="divider mobileMode"></div>
                <div class="col-md-5 col-sm-12">
                  <!-- Total -->
                  <div class="col-width w-size18 p-l-40 p-r-40 p-b-38 m-r-0 m-l-auto p-lr-15-sm">
                    <h5 class="shopping-cart-title"> Order Summary </h5>
                    <p class="shopping-cart-subtitle"> Order Total </p>
                      <div class="flex-w flex-sb-m p-b-12">
                      <span class="cart-summary-text s-text18 w-size19">
                        MRP:
                      </span>
                        {% assign total_mrp = 0 %}
                        {% for item in cart.items %}
                        {% assign total_mrp = item.variant.compare_at_price | times: item.quantity | plus: total_mrp  %}
                        {% endfor %}
                      <span class="cart-summary-text m-text21">
                        {{ total_mrp | money }}
                      </span>
                    </div>
                    <div class="flex-w flex-sb-m p-b-12">
                      <span class="cart-summary-text s-text18 w-size19">
                        Offer Price:
                      </span>
                      <span class="cart-summary-text m-text21">
                        <span id='revy-cart-subtotal-price'><span id='revy-cart-subtotal-price'><span class='hulkapps-cart-original-total'>{{ cart.total_price | money }}</span></span></span>
                      </span>
                    </div>
                    
                    {% if cart.total_discounts > 0 %}
                    {% assign savings = cart.total_discounts | money %}
                    <div class="flex-w flex-sb-m p-b-12">
                      <span class="cart-summary-text s-text18 w-size19">
                        {{ 'cart.general.discount' | t }}:
                      </span>
                      <span class="cart-summary-text m-text21">
                        {{ 'cart.general.savings_html' | t: price: savings }}
                      </span>
                    </div>
                    {% endif %}
                    <div class="flex-w flex-sb-m p-b-12">
                      <span class="cart-summary-text s-text18 w-size19">
                        Shipping:
                      </span>
                      <span class="cart-summary-text m-text21">
                        Calculated at next step
                      </span>
                    </div>
                    <div class="divider"></div>
                    <div class="flex-w flex-sb-m p-t-26">
                      <span class="order-total w-size19">
                        <span id='revy-cart-subtotal-label'>Order total</span>:
                      </span>
                      <span class="order-total f21 th_do_cart_total_price">
                        <span id='revy-cart-subtotal-price' class="">
                          <span id='revy-cart-subtotal-price'>
                            <span class='hulkapps-cart-original-total'>{{ cart.total_price | money }}</span></span></span>
                      </span>
                    </div>
                    <div class="divider"></div>
