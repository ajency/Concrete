
<!-- ======= Homepage basics ======= -->
  <section>
    <div class="hk-basics-pillar" style="background-color: {{section.settings.color_bg }};">
      <div class="container">
          <div class="info-block">
            {% if section.settings.heading != blank %}
              <h3 class="title">{{ section.settings.heading | escape }}</h3>
            {% endif %}
            {% if section.settings.subtitle != blank %}
              <h5 class="sub-title">{{ section.settings.subtitle }}</h5>
            {% endif %}
            <div class="info-block-group">
                {%- if section.blocks.size > 0 -%}
                    {% for block in section.blocks %}
                      {%- if block.settings.size != blank -%}
                          {% assign bannersize = block.settings.size %}
                      {%- else -%}
                          {% assign bannersize = '200x200' %}
                      {%- endif -%} 
                        <div class="info-block-item">
                            {%- if block.settings.image != blank -%}
                                <img class="img-full-mobile" alt="{{ block.settings.description | escape }}" src="{{ block.settings.image | img_url: bannersize }}" />
                            {%- else -%}
                                <img class="img-responsive img-full-mobile" alt="{{ shop.name }}" src="//placehold.it/{{ bannersize }}" />
                            {%- endif -%}
                             <p class="info-block-item-text">{{ block.settings.description }}</p>
                    </div>
                  {% endfor %}
                 {%- endif -%}
              </div>
          </div>
      </div>
    </div>
  </section>
  <!-- End of basics -->

{% schema %}
{
    "name": "Multiple Small Banner", 
    "settings": [
    {
          "type": "header",
          "content": "Design Section"
      },
      {
          "type": "color",
          "id": "color_bg",
          "label": "Background Color",
          "default": "rgba(0,0,0,0)"
      },
      {
          "type": "header",
          "content": "General Settings"
      },
      {
          "type": "text",
          "id": "heading",
          "label": "Heading"
      },
      {
          "type": "text",
          "id": "subtitle",
         "label": "Sub Title"
      }
    ],
    "blocks": [
        {
            "type": "item",
            "name": "Banner image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Banner image"
                },
                {
                    "type": "text",
                    "id": "description",
                    "label": "Description"
                }
            ]
        }
    ],
    "presets": [
          {
              "name": "Multi text image section",
              "category": "Image"
          }
      ]
  }
{% endschema %}
